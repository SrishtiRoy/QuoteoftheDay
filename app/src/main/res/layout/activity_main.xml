<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.srishti.quoteoftheday.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

    <com.daasuu.bl.BubbleLayout
        android:layout_margin="15dp"
        app:bl_arrowDirection="right"
        app:bl_arrowHeight="5dp"
        app:bl_arrowPosition="16dp"
        app:bl_arrowWidth="15dp"
        app:bl_cornersRadius="5dp"
        app:bl_strokeWidth="1dp"
        app:bl_bubbleColor="@android:color/holo_red_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/type_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </com.daasuu.bl.BubbleLayout>
    <com.daasuu.bl.BubbleLayout
        android:layout_margin="15dp"
        app:bl_arrowDirection="left"
        app:bl_arrowHeight="5dp"
        app:bl_arrowPosition="16dp"
        app:bl_arrowWidth="10dp"
        app:bl_cornersRadius="5dp"
        app:bl_strokeWidth="1dp"
        app:bl_bubbleColor="@android:color/holo_red_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_gravity="right">

    <TextView
        android:id="@+id/type_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    </com.daasuu.bl.BubbleLayout>
    <com.daasuu.bl.BubbleLayout
        android:layout_margin="15dp"
        app:bl_arrowDirection="right"
        app:bl_arrowHeight="5dp"
        app:bl_arrowPosition="16dp"
        app:bl_arrowWidth="5dp"
        app:bl_cornersRadius="5dp"
        app:bl_strokeWidth="1dp"
        app:bl_bubbleColor="@android:color/holo_red_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp">
    <TextView
        android:id="@+id/type_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    </com.daasuu.bl.BubbleLayout>
    <com.daasuu.bl.BubbleLayout
        android:layout_margin="15dp"
        app:bl_arrowDirection="left"
        app:bl_arrowHeight="5dp"
        app:bl_arrowPosition="16dp"
        app:bl_arrowWidth="5dp"
        app:bl_cornersRadius="5dp"
        app:bl_strokeWidth="1dp"
        app:bl_bubbleColor="@android:color/holo_red_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_gravity="right">
    <TextView
        android:id="@+id/type_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    </com.daasuu.bl.BubbleLayout>
    <com.daasuu.bl.BubbleLayout
        android:layout_margin="15dp"
        app:bl_arrowDirection="right"
        app:bl_arrowHeight="5dp"
        app:bl_arrowPosition="16dp"
        app:bl_arrowWidth="5dp"
        app:bl_cornersRadius="5dp"
        app:bl_strokeWidth="1dp"
        app:bl_bubbleColor="@android:color/holo_red_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_gravity="left">
    <TextView
        android:id="@+id/type_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />
</com.daasuu.bl.BubbleLayout>
    <com.daasuu.bl.BubbleLayout
        android:layout_margin="15dp"
        app:bl_arrowDirection="left"
        app:bl_arrowHeight="5dp"
        app:bl_arrowPosition="16dp"
        app:bl_arrowWidth="5dp"
        app:bl_cornersRadius="5dp"
        app:bl_strokeWidth="1dp"
        app:bl_bubbleColor="@android:color/holo_red_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_gravity="right">
    <TextView
        android:id="@+id/type_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    </com.daasuu.bl.BubbleLayout>
    <com.daasuu.bl.BubbleLayout
        android:layout_margin="15dp"
        app:bl_arrowDirection="right"
        app:bl_arrowHeight="5dp"
        app:bl_arrowPosition="16dp"
        app:bl_arrowWidth="5dp"
        app:bl_cornersRadius="5dp"
        app:bl_strokeWidth="1dp"
        app:bl_bubbleColor="@android:color/holo_red_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_gravity="left">
    <TextView
        android:id="@+id/type_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    </com.daasuu.bl.BubbleLayout>
    <com.daasuu.bl.BubbleLayout
        android:layout_margin="5dp"
        app:bl_arrowDirection="left"
        app:bl_arrowHeight="5dp"
        app:bl_arrowPosition="16dp"
        app:bl_arrowWidth="5dp"
        app:bl_cornersRadius="5dp"
        app:bl_strokeWidth="1dp"
        app:bl_bubbleColor="@android:color/holo_red_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_gravity="right">
    <TextView
        android:id="@+id/type_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    </com.daasuu.bl.BubbleLayout>

    <Button
        android:id="@+id/next_level_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
